<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uikit_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:titleBackground="#00000000"
        app:titleText="参考合同" />

    <RelativeLayout
        android:id="@+id/rl_template_borrow"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginLeft="28dip"
        android:layout_marginRight="28dip"
        android:layout_marginTop="25dip"
        android:background="@drawable/template_bg_type_select_round_corner">

        <TextView
            android:id="@+id/tv_template_borrow_title"
            style="@style/UikitTextView.Auxiliary.Large"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="40dp"
            android:text="借条模版"
            android:textColor="@color/uikit_text_sub_content"
            android:textStyle="bold" />

        <TextView
            style="@style/UikitTextView.Auxiliary.Small"
            android:layout_marginRight="15dip"
            android:layout_marginTop="8dip"
            android:layout_below="@id/tv_template_borrow_title"
            android:layout_alignLeft="@id/tv_template_borrow_title"
            android:text="@string/template_template_desc"
            />

        <ImageView
            android:id="@+id/iv_template_logo"
            android:layout_width="137dp"
            android:layout_height="118dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/template_img_borrow_template" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_template_receive"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginLeft="28dip"
        android:layout_marginRight="28dip"
        android:layout_marginTop="25dip"
        android:background="@drawable/template_bg_type_select_round_corner">

        <TextView
            android:id="@+id/tv_template_receive_title"
            style="@style/UikitTextView.Auxiliary.Large"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="40dp"
            android:text="收条模版"
            android:textColor="@color/uikit_text_sub_content"
            android:textStyle="bold" />

        <TextView
            style="@style/UikitTextView.Auxiliary.Small"
            android:layout_marginRight="15dip"
            android:layout_marginTop="8dip"
            android:layout_below="@id/tv_template_receive_title"
            android:layout_alignLeft="@id/tv_template_receive_title"
            android:text="@string/template_template_desc" />

        <ImageView
            android:layout_width="137dp"
            android:layout_height="118dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/template_img_receipt_template" />
    </RelativeLayout>

</LinearLayout>
