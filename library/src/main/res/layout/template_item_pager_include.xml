<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="19dip"
        android:layout_marginRight="19dip"
        android:background="@drawable/template_bg_template_page"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dip">

        <ImageView
            android:id="@+id/iv_template_content"
            android:layout_width="220dip"
            android:layout_height="206dip"
            android:layout_below="@id/tv_template_title"
            android:layout_marginTop="30dip" />

        <TextView
            android:id="@+id/tv_template_include_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/uikit_text_auxiliary"
            android:textSize="14dp"
            android:typeface="monospace"
            tools:text="@string/template_paper_borrow_include_desc" />

        <Button
            android:id="@+id/btn_template_include"
            style="@style/UikitHMButton.Large.Black"
            android:layout_width="140dip"
            android:layout_marginTop="30dip"
            tools:text="收录借条" />


    </LinearLayout>

</RelativeLayout>